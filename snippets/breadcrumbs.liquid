<style>
    .breadcrumbs li:not(:last-child):after {
        content: "/\00a0";
        display: inline-block;
        padding-left: .75ch;
        speak: none;
        font-size: 20px;
        font-weight: 400;
    }
    @media screen and (max-width: 750px) {
        .breadcrumbs li:not(:last-child):after {
            font-size: 13px;
        }
    }
</style>

{% unless template == 'index' or template == 'cart' or template == 'list-collections' or template == '404' %}
    {% assign t = template | split: '.' | first %}

    <nav class="breadcrumbs lg:tw-px-[108px] blg:tw-px-[20px] tw-translate-x-0 lg:tw-translate-x-[-4%] tw-text-[0.85em] tw-my-[20px] blg:tw-mt-[28px] blg:tw-mb-[6px]" role="navigation" aria-label="breadcrumbs">
        <ol class="tw-list-none tw-m-0 tw-p-0">
            <li class="tw-inline-block">
                <a class="tw-text-inherit tw-text-[13px] tw-opacity-60 md:tw-text-[20px] tw-uppercase tw-font-primary tw-font-light tw-no-underline hover:tw-underline focus:tw-underline" href="/" title="Home">Home</a>
            </li>

        {% case t %}
            {% when 'page' %}
                <li class="tw-inline-block">
                    <a href="{{ page.url }}" class="tw-text-inherit tw-text-[13px] md:tw-text-[20px] tw-uppercase tw-font-primary tw-font-medium tw-no-underline hover:tw-underline focus:tw-underline" aria-current="page" >{{ page.title }}</a>
                </li>

            {% when 'product' %}

                {% if collection %}
                    {%- assign current_collection = collection -%}
                        <li class="tw-inline-block">
                            <a href="{{ current_collection.url }}" class="tw-text-inherit tw-text-[13px] md:tw-text-[20px] tw-uppercase tw-font-primary tw-font-medium tw-no-underline hover:tw-underline focus:tw-underline">{{ current_collection.title }}</a>
                        </li>
                {% else %}
                    {%- assign collections = product.collections -%}
                    {% if collections.size > 0 %}
                        <li class="tw-inline-block">
                            <a href="{{ collections.first.url }}" class="tw-text-inherit tw-text-[13px] md:tw-text-[20px] tw-uppercase tw-font-primary tw-font-medium tw-no-underline hover:tw-underline focus:tw-underline">{{ collections.first.title }}</a>
                        </li>
                    {% endif %}
                {% endif %}

            {% when 'collection' and collection.handle %}

                {% if current_tags %}
                <li class="tw-inline-block">{{ collection.title | link_to: collection.url }}</li>
                <li class="tw-inline-block">
                    {% capture tag_url %}{{ collection.url }}/{{ current_tags | join: "+"}}{% endcapture %}
                    <a href="{{ tag_url }}" class="tw-text-inherit tw-text-[13px] md:tw-text-[20px] tw-uppercase tw-font-primary tw-font-medium tw-no-underline hover:tw-underline focus:tw-underline" aria-current="page" >{{ current_tags | join: " + "}}</a>
                </li>
                {% else %}
                <li class="tw-inline-block">
                    <a href="{{ collection.url }}" class="tw-text-inherit tw-text-[13px] md:tw-text-[20px] tw-uppercase tw-font-primary tw-font-medium tw-no-underline hover:tw-underline focus:tw-underline" aria-current="page" >{{ collection.title }}</a>
                </li>
                {% endif %}

            {% when 'blog' %}

                {% if current_tags %}
                <li class="tw-inline-block">{{ blog.title | link_to: blog.url }}</li>
                <li class="tw-inline-block">
                    {% capture tag_url %}{{blog.url}}/tagged/{{ current_tags | join: "+" }}{% endcapture %}
                    <a href="{{ tag_url }}" class="tw-text-inherit tw-text-[13px] md:tw-text-[20px] tw-uppercase tw-font-primary tw-font-medium tw-no-underline hover:tw-underline focus:tw-underline" aria-current="page" >{{ current_tags | join: " + " }}</a>
                </li>
                {% else %}
                <li class="tw-inline-block">
                    <a href="{{ blog.url }}" class="tw-text-inherit tw-text-[13px] md:tw-text-[20px] tw-uppercase tw-font-primary tw-font-medium tw-no-underline hover:tw-underline focus:tw-underline" aria-current="page" >{{ blog.title }}</a>
                </li>
                {% endif %}

            {% when 'article' %}

                <li class="tw-inline-block">{{ blog.title | link_to: blog.url }}</li>
                <li class="tw-inline-block">
                    <a href="{{ article.url }}" class="tw-text-inherit tw-text-[13px] md:tw-text-[20px] tw-uppercase tw-font-primary tw-font-medium tw-no-underline hover:tw-underline focus:tw-underline" aria-current="page" >{{ article.title }}</a>
                </li>

            {% else %}

                <li class="tw-text-inherit tw-font-[normal] tw-no-underline hover:tw-underline focus:tw-underline" aria-current="page" >
                    <a href="{{ request.path }}" class="tw-text-inherit tw-text-[13px] md:tw-text-[20px] tw-uppercase tw-font-primary tw-font-medium tw-no-underline hover:tw-underline focus:tw-underline" aria-current="page" >{{ page_title }}</a>
                </li>
        {% endcase %}

        </ol>
    </nav>
{% endunless %}